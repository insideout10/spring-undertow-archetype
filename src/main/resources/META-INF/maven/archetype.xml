<archetype xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0 http://maven.apache.org/xsd/archetype-1.0.0.xsd">
  <id>spring-undertow-archetype</id>
  <allowPartial>true</allowPartial>
  <sources>
    <source>src/main/java/App.java</source>
    <source>src/main/java/WebServer.java</source>
  </sources>
  <resources>
  	<resource>src/main/resources/spring/spring.xml</resource>
  	<resource>src/main/resources/undertow/spring.xml</resource>
  	<resource>src/main/resources/WEB-INF/spring.xml</resource>
  	<resource>src/main/resources/WEB-INF/data-context.xml</resource>
  	<resource>src/main/resources/WEB-INF/security-context.xml</resource>
  	<resource>src/main/resources/WEB-INF/servlet-context.xml</resource>
  	<resource>src/main/resources/app-dev.properties</resource>
  	<resource>src/main/resources/app-test.properties</resource>
  	<resource>src/main/resources/logback.xml</resource>
  	<resource>src/main/resources/logback-test.xml</resource>
  </resources>
  <testSources>
    <source>src/test/java/AppTest.java</source>
  </testSources>
</archetype>